@model IEnumerable<CBTSWE2_TP02.Models.Container>

@{
    ViewData["Title"] = "Container";
}
@* Feito por Eduardo Miranda CB3026604 & Cauã Barros CB3025179 *@

<style>
    .custom-table thead th {
        background-color: #f8f9fa;
        font-weight: bold;
        font-size: 1.1rem;
        border-bottom: 2px solid #dee2e6;
    }
    .custom-table tbody tr:hover {
        background-color: #f1f3f5;
        transition: background 0.2s;
    }
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }
</style>

<div class="container mt-4">
    <div class="d-flex flex-row-reverse mb-3">
        <a asp-controller="Container" asp-action="Create" class="btn btn-primary">
            Adicionar Container
        </a>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table custom-table align-middle shadow-sm rounded">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Número</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Tamanho</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.Id</td>
                            <td class="text-center">@item.Numero</td>
                            <td class="text-center">@item.Tipo</td>
                            <td class="text-center">@item.Tamanho</td>
                            <td class="action-buttons">
                                <a asp-controller="Container" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Atualizar</a>
                                <a asp-controller="Container" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center align-items-center vh-100">
            <h1>Não há registros</h1>
        </div>
    }
</div>
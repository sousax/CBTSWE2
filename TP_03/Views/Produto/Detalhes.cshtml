@model Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-9">
            <div class="card shadow-sm border-0">
                <div class="row g-0">
                    <!-- Left panel: destaque visual maior -->
                    <div class="col-12 col-md-5 col-lg-4 d-flex flex-column justify-content-center align-items-start p-5 bg-primary text-white">
                        <h1 class="h3 fw-bold mb-2">@Model.Nome</h1>
                        <div class="w-100 mb-3">
                            <div class="progress" style="height:6px;">
                                <div class="progress-bar bg-light" role="progressbar" style="width:40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="d-block text-white-50 mt-2">ID: @Model.Id</small>
                        </div>

                        <p class="display-6 fw-semibold mb-1">@Model.Preco.ToString("C")</p>
                        <small class="text-white-50">Em estoque: <strong class="text-white">@Model.QtdEstoque</strong></small>
                    </div>

                    <!-- Right panel: informações detalhadas -->
                    <div class="col-12 col-md-7 col-lg-8">
                        <div class="card-body p-4 p-md-5">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h4 class="mb-0">Informações</h4>
                                <span class="text-muted small">Detalhes do produto</span>
                            </div>

                            <dl class="row mb-4">
                                <dt class="col-sm-4 text-muted">Nome</dt>
                                <dd class="col-sm-8">@Model.Nome</dd>

                                <dt class="col-sm-4 text-muted">Descrição</dt>
                                <dd class="col-sm-8">@Model.Descricao</dd>

                                <dt class="col-sm-4 text-muted">Preço</dt>
                                <dd class="col-sm-8">@Model.Preco.ToString("C")</dd>

                                <dt class="col-sm-4 text-muted">Quantidade no estoque</dt>
                                <dd class="col-sm-8">@Model.QtdEstoque</dd>

                                <dt class="col-sm-4 text-muted">Id</dt>
                                <dd class="col-sm-8">@Model.Id</dd>
                            </dl>

                            <div class="d-flex justify-content-end gap-2">
                                <a asp-controller="Produto" asp-action="Editar" asp-route-produtoId="@Model.Id" class="btn btn-outline-primary">Editar</a>

                                <form asp-controller="Produto" asp-action="Excluir" asp-route-produtoid="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Confirma exclusão deste produto?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger">Excluir</button>
                                </form>

                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                            </div>
                        </div>
                    </div>
                </div> <!-- row g-0 -->
            </div> <!-- card -->
        </div> <!-- col -->
    </div> <!-- row -->
</div> <!-- container-fluid -->

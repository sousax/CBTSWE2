@model CBTSWE2_TP03.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="mb-3 text-primary">@ViewData["Title"]</h2>

                    <p class="text-muted mb-4">Preencha os campos abaixo para cadastrar um novo produto.</p>

                    <form asp-controller="Produto" asp-action="Cadastrar" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descrição do produto"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label asp-for="Preco" class="form-label">Preço</label>
                                <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0.01" />
                                <span asp-validation-for="Preco" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label asp-for="QtdEstoque" class="form-label">Quantidade no estoque</label>
                                <input asp-for="QtdEstoque" class="form-control" type="number" step="1" min="0" />
                                <span asp-validation-for="QtdEstoque" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
